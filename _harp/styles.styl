html, body
  height 100%
  
body
  font-family 'Open Sans'
  font-weight 300
  position relative //scrollspy

h2
  font-weight 300
  
.navbar-custom
  padding-top 10px
  padding-bottom 10px
  z-index 9999
  transition all 0.3s

  &.scrolled
    background rgba(0,0,0,0.9)
  
.navbar-brand
  color #eee
  font-size 3rem
  padding-left 30px
  
  &:hover, &:focus, &:active
    color #fff
  
.navbar-nav > li
  
  &.active
    color white
    
    &::after
      transform scaleX(0)
    
  > a
    color #eee
    margin-right 30px
    
    &::after
      content ''
      display block
      width 100%
      height 1px
      margin-top 9px
      background white
      transform scaleX(0)
      transition all 0.3s
      
    &:hover
      background transparent
      color white
      
      &::after
        transform scaleX(1)
        
    &:focus, &:active
      background transparent
  
.jumbotron.full-page
  margin-bottom 0
  padding-top 90px // navbar
  min-height 100vh
  
#landing, #info
  color #eee
  background linear-gradient(
               rgba(0,0,0,0.7),
               rgba(0,0,0,0.7)
             ),
             url('https://i.imgur.com/HsRjEIZ.jpg')
  background-size cover
  background-attachment fixed
  
.btn-custom
  font-weight 300
  border 1px solid #111
  color #111
  background transparent
  border-radius 0px
  padding 15px 30px
  transition all 0.3s
  
  &.btn-lg
    padding 20px 45px
  
  &:hover, &:focus, &:active
    background #111
    color #eee
    
.img-bw
  filter grayscale(1)
    
.btn-custom-inverse
  font-weight 300
  border 1px solid #eee
  color #eee
  background transparent
  padding 20px 45px
  border-radius 0px
  transition all 0.3s
  
  &:hover, &:focus, &:active
    background #eee
    color #111

#download
  background #eee
  
ul
  list-style-type square

li
  font-size 2rem
